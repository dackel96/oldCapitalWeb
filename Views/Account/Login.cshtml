@model LoginViewModel

@{
    ViewData["Title"] = "-Log in-";
}

<div class="mt-3 row-md-4 rounded-3">
    <div class="col-md-4 offset-md-4">
        <section>
            <form id="account" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="text-center mb-3">
                    <label asp-for="@Model.Username" class="form-labe text-white"></label>
                    <input asp-for="@Model.Username" class="form-control text-bg-secondary" autocomplete="username" aria-required="true" />
                    <span asp-validation-for="@Model.Username" class="text-danger"></span>
                </div>
                <div class="text-center mb-3">
                    <label asp-for="@Model.Password" class="form-label text-white"></label>
                    <input asp-for="@Model.Password" type="password" class="form-control text-bg-secondary" autocomplete="current-password" aria-required="true" />
                    <span asp-validation-for="@Model.Password" class="text-danger"></span>
                </div>
                <div class="mb-3 text-center">
                    <button id="login-submit" type="submit" class="btn btn-primary">Log in</button>
                </div>
            </form>
        </section>
    </div>
</div>
