@model RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

<div class="row-md-4 bg-dark rounded-3">
    <div class="col-md-4 offset-md-4">
        <hr />
        <form id="registerForm" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="text-center mb-3">
                <label asp-for="@Model.Username" class="text-white">Username</label>
                <input class="form-control text-bg-secondary" autocomplete="on" aria-required="true" asp-for="@Model.Username" />
                <span asp-validation-for="@Model.Username" class="text-danger"></span>
            </div>
            <div class="text-center mb-3">
                <label asp-for="@Model.Email" class="text-white">Email</label>
                <input class="form-control text-bg-secondary" autocomplete="on" aria-required="true" asp-for="@Model.Email" />
                <span asp-validation-for="@Model.Email" class="text-danger"></span>
            </div>
            <div class="text-center mb-3">
                <label asp-for="@Model.PhoneNumber" class="text-white">PhoneNumber</label>
                <input class="form-control text-bg-secondary" autocomplete="on" aria-required="true" asp-for="@Model.PhoneNumber" />
                <span asp-validation-for="@Model.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="text-center mb-3">
                <label asp-for="@Model.Password" class="text-white">Password</label>
                <input class="form-control text-bg-secondary" type="password" autocomplete="on" aria-required="true" asp-for="@Model.Password" />
                <span asp-validation-for="@Model.Password" class="text-danger"></span>
            </div>
            <div class="text-center mb-3">
                <label asp-for="@Model.ConfirmPassword" class="text-white">Confirm Password</label>
                <input class="form-control text-bg-secondary" type="password" autocomplete="on" aria-required="true" asp-for="@Model.ConfirmPassword" />
                <span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="text-center">
                <button id="registerSubmit" type="submit" class="btn btn-primary">Register</button>
            </div>
        </form>
        <hr />
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}